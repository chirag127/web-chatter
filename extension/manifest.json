{
  "manifest_version": 3,
  "name": "Contextual Web Page Chat Assistant",
  "version": "1.0.0",
  "description": "Chat with any webpage using Google's Gemini API",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_title": "Contextual Web Page Chat Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle the chat sidebar"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/sidebar.html",
        "sidebar/sidebar.css",
        "sidebar/sidebar.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
